    fixed-address master2.{{ cluster_name }}.{{ parent_domain }};
}

host worker0 {
    hardware ethernet {{ vms['worker0'].mac }};
    option domain-name "{{ cluster_name }}.{{ parent_domain }}";
    option host-name "{{ vms['worker0'].hostname }}";
    fixed-address worker0.{{ cluster_name }}.{{ parent_domain }};
}

host worker1 {
    hardware ethernet {{ vms['worker1'].mac }};
    option domain-name "{{ cluster_name }}.{{ parent_domain }}";
    option host-name "{{ vms['worker1'].hostname }}";
    fixed-address worker1.{{ cluster_name }}.{{ parent_domain }};
}

